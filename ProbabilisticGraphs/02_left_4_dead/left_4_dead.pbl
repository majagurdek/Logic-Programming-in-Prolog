?::go_gas_station.
?::go_near_car.
?::go_switch_car.

\+edge(mall, radio) :- go_gas_station.
\+edge(gas_station, far_car) :- go_near_car.
\+edge(near_car, working_car) :- go_switch_car.

\+edge(mall, gas_station) :- \+go_gas_station.
\+edge(gas_station, near_car) :- \+go_near_car.
\+edge(near_car, far_car) :- \+go_switch_car.


