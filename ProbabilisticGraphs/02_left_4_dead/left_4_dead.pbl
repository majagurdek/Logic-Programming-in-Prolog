path(X,Y) :- edge(X,Y).
path(X,Z) :- edge(X,Y), Y \= Z, path(Y,Z).

0.5::edge(mall, gas_station).
0.6::edge(mall, radio).
0.7::edge(gas_station, near_car).
0.4::edge(gas_station, far_car).
0.5::edge(near_car, far_car).
0.3::edge(near_car, working_car).
0.7::edge(far_car, working_car).
